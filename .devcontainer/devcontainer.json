{
  "name": "MingleMap (web)",
  "dockerComposeFile": [
    "../docker-compose.yml",
    "../docker-compose.override.yml",
    "compose.dev.yml"
  ],
  "service": "web",
  "runServices": [
    "db",
    "redis",
    "web",
    "frontend"
  ],
  "shutdownAction": "stopCompose",
  "workspaceFolder": "/app",
  "workspaceMount": "source=${localWorkspaceFolder},target=/app,type=bind,consistency=cached",
  "overrideCommand": false,
  "postCreateCommand": "test -f requirements-dev.txt && pip install -r requirements-dev.txt || true; npm install -g @openai/codex@latest || true",
  "postStartCommand": "python manage.py migrate",
  "remoteUser": "root",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "ms-azuretools.vscode-docker",
        "ms-vscode.vscode-typescript-next",
        "openai.chatgpt"
      ]
    }
  },
  "forwardPorts": [
    8000,
    5173
  ],
  "portsAttributes": {
    "8000": {
      "label": "Django (dev)"
    },
    "5173": {
      "label": "Vite (frontend)"
    }
  }
}
