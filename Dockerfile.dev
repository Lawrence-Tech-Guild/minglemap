# ---- Base image ----
FROM python:3.12-slim

# ---- OS packages needed for psycopg2 + GeoDjango + Node tooling ----
RUN apt-get update \
       && apt-get install -y --no-install-recommends \
       build-essential libpq-dev gdal-bin nodejs npm \
       && rm -rf /var/lib/apt/lists/*

# ---- Python deps (prod + dev) ----
WORKDIR /app
COPY requirements.txt requirements-dev.txt ./
RUN pip install --upgrade pip \
       && PIP_REQUIRE_HASHES=0 pip install --no-cache-dir -r requirements.txt \
       && PIP_REQUIRE_HASHES=0 pip install --no-cache-dir -r requirements-dev.txt

# ---- Project code ----
COPY . /app

# ---- Runtime config ----
ENV PYTHONUNBUFFERED=1
ENV PIP_ROOT_USER_ACTION=ignore
CMD ["daphne", "-b", "0.0.0.0", "-p", "8000", "minglemap.asgi:application"]
